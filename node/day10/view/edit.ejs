<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>

    <div class="container mt-5 bg-secondary p-5 text-light rounded w-50">
        <h2>Product Information Form</h2>

        <% a.forEach(function(i){ %>
            <form action="/updateprod" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="productImage" class="form-label">Choose Product Image</label>
                    <input type="file" class="form-control" id="productImage" name="i1" value="<%= i.pictures %>" required>
                </div>


                <input type="hidden" name="myid" value="<%= i.id %>">


                <div class="mb-3">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="productName" name="i3" value="<%= i.name %>"
                        placeholder="Enter Product Name" required>
                </div>


                <div class="mb-3">
                    <label for="productPrice" class="form-label">Product Price</label>
                    <input type="number" class="form-control" id="productPrice" name="i4" value="<%= i.price %>"
                        placeholder="Enter Product Price" required step="0.01">
                </div>


                <button type="submit" class="btn btn-primary">Update</button>
            </form>
            <% }) %>

    </div>
    <br>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>