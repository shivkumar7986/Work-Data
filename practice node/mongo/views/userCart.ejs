    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark  px-5 py-3 fs-4 mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fs-2 text-white" href="/">TrendingDripz</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


        </div>
    </nav>
    <!-- Cart Title -->
<div class="w-100 d-flex justify-content-center mt-5 text-decoration-underline">
    <h1 class="text-black">Your Cart</h1>
</div>

<!-- Cart Items -->
<div style="width: 100%; padding: 2vw; margin-top: 2vw;">
    <div class="container">
        <div class="row row-cols-1 row-cols-lg-4 g-5">
            <% cartItems.forEach(function(item){ %>
            <div class="col">
                <div class="card h-100">
                    <!-- Product Image -->
                    <img src="/uploads/<%= item.productImg %>" class="card-img-top" alt="<%= item.productName %>" style="height: 300px; width: 100%; object-fit: cover;">
                    
                    <!-- Product Details -->
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= item.productName %></h5>
                        <p class="card-text">Price: $<%= item.productPrice %></p>
                    </div>
                    
                    <!-- Remove from Cart Button -->
                    <div class="card-footer text-center">
                        <a href="/removefromcart/<%= item._id %>" class="btn btn-danger">Remove from Cart</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>


</body>

</html>
