<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Form</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .form-container, .table-container {
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 100%;
            max-width: 600px;
            margin-bottom: 30px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        .form-group input:focus {
            border-color: #007bff;
            outline: none;
        }

        .form-group input[type="submit"] {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
        }

        .form-group input[type="submit"]:hover {
            background-color: #0056b3;
        }

        .form-group input[type="date"] {
            padding: 8px;
        }

        /* Table Styles */
        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container th, .table-container td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: left;
        }

        .table-container th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table-container tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>

<body>

    
    <div class="form-container">
        <h2>Edit Form</h2>
        <% dt.forEach((p)=>{ %>
            <form action="/update-product" method="POST">
                <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="number" id="productId" name="pid" placeholder="Enter Product ID" required value="<%=p.productId %>">
                </div>
    
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input type="text" id="productName" name="pnm" placeholder="Enter Product Name" required value="<%=p.productName %>" >
                </div>
    
                <div class="form-group">
                    <label for="productPrice">Product Price</label>
                    <input type="number" id="productPrice" name="ppr" placeholder="Enter Product Price" required min="0" step="0.01" value="<%=p.productPrice %>">
                </div>
    
                <div class="form-group">
                    <label for="productDate">Date</label>
                    <input type="date" id="productDate" name="pd" required value="<%=p.date %>">
                </div>
    
                <div class="form-group">
                    <input type="submit" value="Update Product">
                </div>
            </form>
        <% }) %>
        
    </div>

    

</body>

</html>
